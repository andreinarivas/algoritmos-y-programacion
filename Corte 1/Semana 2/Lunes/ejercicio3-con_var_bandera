num1=(input('Please enter first number: '))
num2=(input('Please enter second number: '))
is_valid=True
if num1.isnumeric():
    num1=float(num1)
else:
    is_valid=False
if num2.isnumeric():
    num2=float(num2)
else:
    is_valid=False
if is_valid==True:
    if num2==0:
        print('ERROR. division is undefined')
    else:
        print(num1/num2)
else:
    print('ERROR. input is invalid. please restart')